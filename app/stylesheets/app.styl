// Vendor
@import "_vendor.styl";
// Modules
@import "modules/_mixins.styl";

// Components
@import "components/_typography.styl";
@import "components/_layout.styl";
@import "components/_buttons.styl";


body
  font-family 'Vollkorn'
  font-size 22px
  line-height 1.26em

h1,h2,h3,p,a
  word-wrap break-word

h1,h2,h3
  font-family 'Old Standard TT'
  font-size 36px
  line-height 1.3em
  text-transform uppercase

h3
  font-size 24px
  line-height 1.3em
  margin-bottom 10px

a
  text-decoration none
  color #000
  &:hover
    border-bottom 1px solid currentColor
    color #d3007e

button
  cursor pointer

[ng-click]
  cursor pointer
  &:hover
    color #d3007e

.active
.toggled
[ng-click]:hover.active
.active a
  color #d3007e

input[type=text],
input[type=url],
textarea
  border 1px solid #000
  padding 5px 10px
  &:focus
    outline none

input[type=submit]
  background #fff
  border none

html,
body,
main,
main > div
  height 100%
  width 100%

#main-nav
  position fixed
  left 10px
  top 0
  padding-top 10px
  width 100%
  ul
    width 33%
    padding-right 1%
  li
    float left
    width 30%
    &:nth-child(2)
      text-align center
    &:nth-child(3)
      text-align right

.decoration
  border 0
  background-color #000
  height 3px
  position fixed
  top 50px
  left 0
  width 100%
  margin 0
  z-index 101

.indices
  .indices-listing,
  .active-index,
  .active-item
    position fixed
    left 0
    top 0
    height 100%
    padding 80px 20px 40px
    width 33.3333%
    border-right 3px solid #000
    overflow-y scroll
  .active-index
    left 33.3333%
  .active-item
    border-right 0 none
    left 66.6666%


.active-index
  .index-title
    padding-bottom 10px
    line-height 1.33em
  .index-description
    border-bottom 1px solid #000
    padding-bottom 30px
    margin-bottom 10px


.add-something
  position fixed
  bottom 0
  left 0
  background #fff
  padding-bottom 20px
  width 33.33333%
  border-right 3px solid #000
  input[type=text],
  input[type=url],
  textarea
    font-family 'Old Standard TT'
    width 100%
    border 0 none
    border-bottom 2px solid #000
    font-size 22px
    padding 20px
    left 0
    &.ng-invalid
      border-bottom-color red
      ~ input[type=submit]
        color red
        border-color red
  input[type=submit]
    position absolute
    right 5px
    top 46%
    transform translateY(-50%)
    font-size 12px
    border 3px solid black
    width 50px
    height 50px
    border-radius 50px

#add-index
  padding-bottom 12px
  input[type=submit]
    top auto
    bottom 2%

.add-something
  &#add-item,
  &#add-subitem
    left 33.333%
  &#add-subitem
    bottom 74px
  &#add-link
    left 66.66666%
    border-right 0 none

.index-controls
  position absolute
  top 10px
  left 0
  width 100%
  padding 0 20px
  > *
    float left
    margin-right 5px
  > .go-to-alpha
    display block
    padding 5px .33%
    text-transform uppercase


.index-listing
  overflow auto
  padding-top 30px
  height 60%
  position relative
  .alpha-listing
    width 345px
    float left
    height 100%
    overflow auto
    border-right 2px solid #ccc
    padding-left 35px
    padding-right 10px
    > span
      display block
      margin-bottom 5px
    .letter-listing
      margin-bottom 5px

.letter-listing
  margin-left 1em

.subindex-listing
  margin-left 2.5em
  font-size .8em
  list-style upper-latin

.url-listing
  list-style square
  margin-left 1em

.go-back-to-indices
  width 33%
  position fixed
  left 0
  top 0
  height 100%
  background-color #000
  position relative
  &:after
    content '>'
    display block
    position absolute
    color #fff
    transform translate(-50%, -50%)
    top 50%
    left 50%

.about-wrapper
  padding 10%
  font-size 36px
  line-height 1.3em
  .about
    width 800px
    padding 10px
    margin 0 auto
    display block

// Partials
@import "partials/_partial1.styl";
@import "partials/_read.styl";

// For SHAME
@import "_shame.styl";

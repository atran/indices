// Vendor
@import "_vendor.styl";
// Modules
@import "modules/_mixins.styl";

// Components
@import "components/_typography.styl";
@import "components/_layout.styl";
@import "components/_buttons.styl";


body
  font-family 'Vollkorn'
  font-size 22px
  line-height 1.26em

h1,h2,h3,p,a
  word-wrap break-word

h1,h2,h3
  font-family 'Old Standard TT'
  font-size 36px
  line-height 1.3em
  text-transform uppercase
  
h3
  font-size 33px
  line-height 1.3em
  
a
  text-decoration none
  color #0000ff
  &:hover
    border-bottom 1px solid currentColor
    padding-bottom 1px
    
[ng-click]
  cursor pointer
  &:hover
    color #4CAF50
    
.active
[ng-click]:hover.active
  color #4CAF50

input[type=text],
input[type=url]
  border 1px solid #000
  padding 5px 10px
  &:focus
    outline none
  
input[type=submit]
  background #fff
  border none

html,
body,
main,
main > div
  height 100%
  width 100%

#main-nav
  position fixed
  right 0
  top 0
  background #fff
  padding 20px
  display none
  
.decoration
  border 0
  background-color #000
  height 3px
  position fixed
  top 17px
  left 0
  width 100%
  margin 0
  z-index 101  
  
.indices
  .indices-listing,
  .active-index,
  .active-item
    position fixed
    left 0
    top 0
    height 100%
    padding 40px 20px
    width 33.3333%
    border-right 3px solid #000
    overflow-y scroll
  .active-index
    left 33.3333%
  .active-item
    border-right 0 none
    left 66.6666%

.add-something
  position fixed
  bottom 0
  left 0
  background #fff
  padding-bottom 20px
  width 33.33333%
  border-right 3px solid #000
  input[type=text],
  input[type=url]
    font-family 'Old Standard TT'
    width 100%
    border 0 none
    border-bottom 2px solid #000
    font-size 22px
    padding 20px
    left 0
    &.ng-invalid
      border-bottom-color red
      ~ input[type=submit]
        color red
  input[type=submit]
    position absolute
    right 5px
    top 46%
    transform translateY(-50%)
    font-size 32px

.add-something
  &#add-item,
  &#add-subitem
    left 33.333%
  &#add-subitem
    bottom 74px
  &#add-link
    left 66.66666%
    border-right 0 none

.index-listing
  list-style upper-roman
  margin-left 2em

.subindex-listing 
  margin-left 1.5em
  font-size .8em
  list-style upper-latin
  
.url-listing
  list-style square
  margin-left 1em

// Partials
@import "partials/_partial1.styl";

// For SHAME
@import "_shame.styl";
